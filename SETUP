#!/bin/sh
#
# Condition the environment for Mu development, using only
# binaries and libraries in a sandboxed directory.

export SANDBOX_NAME='Mu01'
export SANDBOX_PATH=/Users/r/Projects/Mu/${SANDBOX_NAME}

# ================================================================
# set the path
export PATH=${SANDBOX_PATH}/usr/bin:${PATH}

# ================================================================
# set the prompt so we know we're in the sandbox
export PS1='${SANDBOX_NAME}[\w]$ '
# ... and away we go

exec /bin/bash

